<script>
  function setupSlideshow() {
    const images = document.querySelectorAll('#slideshow img');
    let currentSlide = 0;

    function showNextSlide() {
      images[currentSlide].classList.add('hidden');
      currentSlide = (currentSlide + 1) % images.length;
      images[currentSlide].classList.remove('hidden');
    }

    setInterval(showNextSlide, 3000); // Change slide every 3 seconds
  }

  document.addEventListener('DOMContentLoaded', setupSlideshow);

  // Add Show More functionality
  document.addEventListener('DOMContentLoaded', () => {
    const showMoreBtn = document.getElementById('show-more-btn');
    const moreVideos = document.getElementById('more-videos');
    let isExpanded = false;

    if (showMoreBtn && moreVideos) {
      showMoreBtn.addEventListener('click', () => {
        isExpanded = !isExpanded;
        moreVideos.classList.toggle('hidden');
        showMoreBtn.textContent = isExpanded ? 'Show Less' : 'Show More Videos';
      });
    }
  });
</script>