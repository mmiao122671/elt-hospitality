---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Curriculum & Certifications">
  <div class="bg-primary text-white py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">Curriculum & Certifications</h1>
      <p class="text-xl">Comprehensive training for the hospitality industry</p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12">
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8">Program Highlights</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-4">Language Proficiency</h3>
          <ul class="list-disc list-inside space-y-2">
            <li>Reading comprehension</li>
            <li>Writing skills</li>
            <li>Listening practice</li>
            <li>Speaking confidence</li>
          </ul>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-4">Customer Service</h3>
          <ul class="list-disc list-inside space-y-2">
            <li>Communication skills</li>
            <li>Problem-solving</li>
            <li>Cultural awareness</li>
            <li>Professional etiquette</li>
          </ul>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-4">Industry Knowledge</h3>
          <ul class="list-disc list-inside space-y-2">
            <li>Employment Standards Act</li>
            <li>Human Rights Act</li>
            <li>Workplace safety</li>
            <li>Industry regulations</li>
          </ul>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-4">Practical Experience</h3>
          <ul class="list-disc list-inside space-y-2">
            <li>Server training</li>
            <li>Customer service practice</li>
            <li>Job shadow placement</li>
            <li>Event planning</li>
          </ul>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-bold mb-8">Certifications</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-gray-100 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">EMERIT National Tourism Skills</h3>
          <p>Industry-recognized certification for tourism professionals</p>
        </div>
        <div class="bg-gray-100 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">Canadian Workplace Essentials</h3>
          <p>Essential skills for workplace success in Canada</p>
        </div>
        <div class="bg-gray-100 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">PEI Best Service</h3>
          <p>Local hospitality service excellence certification</p>
        </div>
        <div class="bg-gray-100 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">Food Safety</h3>
          <p>Safe food handling and preparation certification</p>
        </div>
        <div class="bg-gray-100 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">WHMIS</h3>
          <p>Workplace Hazardous Materials Information System</p>
        </div>
        <div class="bg-gray-100 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">First Aid & CPR/AED</h3>
          <p>Standard First Aid and CPR/AED certification</p>
        </div>
      </div>
    </section>
  </div>
</Layout>