---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "ELT Hospitality Class at Holland College's Belmont Centre - Helping newcomers integrate into PEI's tourism industry" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | ELT Hospitality Class</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-primary">ELT Hospitality</a>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-600 hover:text-primary">Home</a>
            <a href="/about" class="text-gray-600 hover:text-primary">About</a>
            <a href="/curriculum" class="text-gray-600 hover:text-primary">Curriculum</a>
            <a href="/success-stories" class="text-gray-600 hover:text-primary">Success Stories</a>
            <a href="/contact" class="text-gray-600 hover:text-primary">Contact</a>
          </div>
          <a href="/apply" class="hidden md:block bg-secondary text-white px-6 py-2 rounded-full hover:bg-opacity-90">
            Apply Now
          </a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-primary text-white mt-20">
      <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Contact Us</h3>
            <p>34 Belmont Street</p>
            <p>Charlottetown, PE C1A 5H1</p>
            <p>Phone: 1 (902) 629-4297</p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/about" class="hover:text-secondary">About Program</a></li>
              <li><a href="/curriculum" class="hover:text-secondary">Curriculum</a></li>
              <li><a href="/apply" class="hover:text-secondary">How to Apply</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Connect With Us</h3>
            <a 
              href="https://www.facebook.com/profile.php?id=100052566775944"
              class="inline-block hover:text-secondary"
              target="_blank"
              rel="noopener noreferrer"
            >
              Follow us on Facebook
            </a>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-700 text-center">
          <p>&copy; {new Date().getFullYear()} ELT Hospitality Class. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  body {
    font-family: 'Poppins', sans-serif;
  }
</style>